@model Table
@using ReservationSystem.Domain.Enums

<div class="container-fluid">
    <div class="col-12">
        <form asp-controller="Tables" asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <div class="col-2">
                    <label asp-for="Name">Name : </label>
                </div>
                <div class="col-2">
                    <input type="text" asp-for="Name" class="w-100" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label asp-for="Status">Status : </label>
                </div>
                <div class="col-2">
                    <select asp-for="Status">
                        <option value="@TableStatus.Available">Available</option>
                        <option value="@TableStatus.Reserved">Reserved</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label asp-for="Capacity">Capacity : </label>
                </div>
                <div class="col-2">
                    <input type="number" asp-for="Capacity" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label asp-for="Location">Location : </label>
                </div>
                <div class="col-2">
                    <input type="text" asp-for="Location" class="w-100" />
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Update" />
        </form>
    </div>
</div>

