@model AddMenuViewModel


    <div class="col-md-8 align-items-center">
        <form asp-controller="Menus" asp-action="Add" method="post" enctype="multipart/form-data">

            <div class="mt-5">
                <div class="d-flex justify-content-between align-items-center mb-4 pb-4">
                    <h3 class="">Add Menu</h3>
                </div>
                <div class="row mb-2">
                    <div class="col-2">
                        <label asp-for="CategoryId" class="col-form-label">Category : </label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryId" class="form-control">
                            <option disabled>- Please Select </option>
                            @if (Model.Categories != null && Model.Categories.Count() > 0)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col">
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label asp-for="Name" class="col-form-label">Name : </label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label asp-for="Description" class="col-form-label">Description : </label>
                    </div>
                    <div class="col-8">
                        <input type="text" class="form-control" asp-for="Description" />
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label asp-for="@Model.Image" class="col-form-label">Image : </label>
                    </div>
                    <div class="col-8">
                        <input type="file" class="form-control" asp-for="@Model.Image" />
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label asp-for="Price" class="col-form-label">Price : </label>
                    </div>
                    <div class="col-8">
                        <input type="number" min="0" class="form-control" asp-for="Price" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-3">
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </div>
            </div>

        </form>
    </div>
