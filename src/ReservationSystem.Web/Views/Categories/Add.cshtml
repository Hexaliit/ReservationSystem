@model CategoryViewModel

<h3>
    Create Category
</h3>
<div class="row">
    <div class="col-md-8 align-items-center">
        <form asp-controller="Categories" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Category.Name" class="col-form-label">Name : </label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Category.Name" class="form-controll w-100">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Category.Description" class="col-form-label">Description : </label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Category.Description" class="form-controll w-100">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <label asp-for="Image" class="col-form-label">Image Path : </label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="Image" class="form-controll w-100">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-2">
                    <input type="submit" class="btn btn-primary" value="Save">
                </div>
            </div>
        </form>
    </div>
</div>